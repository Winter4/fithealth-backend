{
  "name": "rehearsal-bot",
  "version": "1.0.0",
  "description": "A telegram bot for booking a rehearsal",
  "main": "index.ts",
  "scripts": {
    "dev": "npx nodemon source/index.ts | pino-pretty --translateTime",
    "dev:up": "docker compose -f docker/docker-compose.yml up -d",
    "dev:down": "docker compose -f docker/docker-compose.yml down",
    "dev:db:migrate": "npx prisma migrate dev",
    "prepare": "husky install"
  },
  "prisma": {
    "schema": "source/prisma/schema.prisma"
  },
  "author": "Winter4 <mywinter4@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.10.1",
    "@types/express": "^4.17.17",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "grammy": "^1.14.1",
    "ioredis": "^5.3.2",
    "pino": "^8.11.0",
    "pino-http": "^8.3.3",
    "pino-pretty": "^9.3.0",
    "prettier": "^2.8.8"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/node": "^18.14.1",
    "husky": "^8.0.3",
    "nodemon": "^2.0.20",
    "prisma": "^4.10.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
